model CategoryEvent {
    id            String      @id @default(cuid())
    name          String
    color         String
    contributor   Contributor @relation(fields: [contributorId], references: [id])
    contributorId String      @db.Uuid
    events        Event[]

    @@unique([name, contributorId]) // evita doppioni
}

model Event {
    id              String        @id @default(cuid())
    title           String
    description     String?
    start           DateTime
    end             DateTime
    categoryEvent   CategoryEvent @relation(fields: [categoryEventId], references: [id])
    categoryEventId String
    contributor     Contributor   @relation(fields: [contributorId], references: [id])
    contributorId   String        @db.Uuid
    createdAt       DateTime      @default(now())
    updatedAt       DateTime      @updatedAt
}
