model UnitOfMeasure {
    id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    name         String @unique
    abbreviation String @unique

    unitValueId String?    @db.Uuid
    unitValue   UnitValue? @relation(fields: [unitValueId], references: [id], onDelete: Cascade) // 1-to-Many
}

model UnitValue {
    id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    value Int

    unitOfMeasures   UnitOfMeasure[] // üî• Un valore pu√≤ essere usato da pi√π unit√† di misura
    ProductUnitValue ProductUnitValue[]
}
