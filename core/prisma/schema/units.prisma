model UnitValue {
    id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    value Int

    productUnitFormats ProductUnitFormat[]
}

model UnitOfMeasure {
    id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    abbreviation String @unique // Es. "kg", "g", "ml"
    name         String @unique // Es. "kg", "g", "ml"

    productUnitFormats ProductUnitFormat[]
}
