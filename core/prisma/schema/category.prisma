model Category {
    id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    name        String
    slug        String  @unique(map: "category_slug_idx")
    description String?

    createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(6)
    updatedAt DateTime @updatedAt @map("updated_at")

    Product Product[]
}
